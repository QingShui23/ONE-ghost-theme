{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}


{{#is "home"}}
{{#get "posts"}}
    {{#foreach posts}}
    	{{#if @first}}
   	    <div class="post-bg" style="background-image: url({{#if image}}{{image}}{{else}}http://cdn.4zen.top/default.jpg{{/if}});"></div>
   	    {{/if}}
    {{/foreach}}
{{/get}}

<header class="home-header" to="#content"  data-offset="-55">
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title" to="#content"  data-offset="-55"><img src ="{{asset "img/logo.png"}}" alt="{{@blog.title}}" /></h1>
            <h2 class="page-description" to="#content"  data-offset="-55">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-55" to="#content"><span class="hidden">下拉显示</span></a>
</header>
{{/is}}



