{{! Previous/next page links - only displayed on page 2+ }}

{{! This is the post loop - each post will be output using this markup }}
{{^is "tag"}}
    {{#is "paged"}}
    {{#foreach posts}}
        {{#if @first}}
        <div class="post-bg" style="background-image: url({{#if image}}{{image}}{{else}}http://cdn.4zen.top/default.jpg{{/if}});"></div>
        {{/if}}
    {{/foreach}}

    {{/is}}
{{/is}}

<div class="site-wrapper" page-type="c-index">
{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

{{#foreach posts}}
<article class="{{post_class}}">
<div class="post-toppic" style="">
                    <div class="picbox"><a class="read-more" href="{{url}}">
                      <img node-type="articleHeaderPic" src="{{#if image}}{{image}}{{else}}http://cdn.4zen.top/default.jpg{{/if}}">
                                          </a></div>
                  </div>
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt characters="140"}} <a class="read-more" href="{{url}}">&raquo;</p>
    </section>
    <footer class="post-meta">
        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
        {{author}}
        {{tags prefix=" 标签："}}
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="YYYY年MM月DD日"}}</time>
        <a href="{{url}}#comment" class="post-comment">有<span data-disqus-url="{{url}}"></span>条评论<a>
    </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
